<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/message_single_layout"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/chatuserimage"
        android:layout_width="56dp"
        android:layout_height="58dp"
        android:src="@drawable/round_account_circle_black_24dp" />
        <!--app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"-->



    <TextView
        android:id="@+id/chatusermessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/chatuserimage"
        android:background="@drawable/message_text_background"
        android:padding="5dp"
        android:text="TextView"
        android:textSize="24sp" />


    <ImageView
        android:id="@+id/chatusersentimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chatusermessage"
        android:layout_alignStart="@+id/chatusermessage"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_toEndOf="@+id/chatuserimage"
        android:padding="0dp"
        android:scaleType="centerCrop" />
</RelativeLayout>